#:kivy 1.11.1
#: import utils kivy.utils
#: set background_color         "#FFFFFF"
#: set font_color               "#000000"
#: set background_color2        "#FF0000"

<PantallaInicio>:
    gl_poemas: gl_poemas
    sv_poemas: sv_poemas
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex(background_color)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text: "repentista"
            halign: 'center'            
            size_hint: 1, .05
            pos_hint: {"x":0,"top":1}
            font_size: dp(30)
            color: utils.get_color_from_hex(font_color)
        ScrollView:  
            id: sv_poemas        
            pos_hint: {"x":.05,"top":.9}
            size_hint: 0.9, 0.8
            do_scroll_y: True
            do_scroll_x: False
            bar_width: 10
            GridLayout:
                id: gl_poemas
                cols: 1
                size_hint_y: None
                spacing: dp(5)
                padding: dp(10)
                height: self.minimum_height
        Button:
            text: "+"
            size_hint: .2, .05
            pos_hint: {"x":.2,"top":0.1}
            font_size: dp(30)
            color: utils.get_color_from_hex(font_color)
            on_press: root.btn_nuevo_on_press()
        Button:
            text: "Orden"
            size_hint: .2, .05
            pos_hint: {"x":.4,"top":0.1}
            font_size: dp(20)
            color: utils.get_color_from_hex(font_color)
            on_press: root.btn_orden_on_press()
        Button:
            text: "Ayuda"
            size_hint: .2, .05
            pos_hint: {"x":.6,"top":0.1}
            font_size: dp(20)
            color: utils.get_color_from_hex(font_color)

<PantallaPoema>:
    gl_versos: gl_versos
    sv_versos: sv_versos
    txt_titulo: txt_titulo
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex(background_color)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        TextInput:
            id: txt_titulo
            text: root.titulo
            halign: 'center'            
            size_hint: 1, .1
            pos_hint: {"x":0,"top":1}
            font_size: dp(30)
            color: utils.get_color_from_hex(font_color)
            on_text: root.txt_titulo_on_text()
        Label:
            text: root.modificado
            halign: 'center'            
            size_hint: .5, .05
            pos_hint: {"x":0,"top":.9}
            font_size: dp(10)
            color: utils.get_color_from_hex(font_color)
        Label:
            text: root.composicion
            halign: 'center'            
            size_hint: .5, .05
            pos_hint: {"x":.5,"top":.9}
            font_size: dp(10)
            color: utils.get_color_from_hex(font_color)
        ScrollView:  
            id: sv_versos      
            pos_hint: {"x":.05,"top":.8}
            size_hint: 0.9, 0.7
            do_scroll_y: True
            do_scroll_x: False
            bar_width: 10
            GridLayout:
                id: gl_versos
                cols: 1
                size_hint_y: None
                spacing: dp(5)
                padding: dp(10)
                height: self.minimum_height
        Button:
            text: "Atras"
            size_hint: .2, .05
            pos_hint: {"x":.2,"top":0.1}
            font_size: dp(20)
            color: utils.get_color_from_hex(font_color)
            on_press: root.btn_atras_on_press()
        Button:
            text: "Eliminar"
            size_hint: .2, .05
            pos_hint: {"x":.4,"top":0.1}
            font_size: dp(20)
            color: utils.get_color_from_hex(font_color)
            on_press: root.btn_eliminar_on_press()
        Button:
            text: "Ayuda"
            size_hint: .2, .05
            pos_hint: {"x":.6,"top":0.1}
            font_size: dp(20)
            color: utils.get_color_from_hex(font_color)

<PantallaSeleccionarComposicion>:
    gl_composiciones: gl_composiciones
    sv_composiciones: sv_composiciones
    FloatLayout:
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex(background_color)
            Rectangle:
                pos: self.pos
                size: self.size
        ScrollView:  
            id: sv_composiciones      
            pos_hint: {"x":.05,"top":.95}
            size_hint: 0.9, 0.9
            do_scroll_y: True
            do_scroll_x: False
            bar_width: 10
            GridLayout:
                id: gl_composiciones
                cols: 1
                size_hint_y: None
                spacing: dp(5)
                padding: dp(10)
                height: self.minimum_height
        

<TarjetaPoema>:
    size_hint_y: None
    height: dp(60)
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:        
            orientation: 'vertical'
            size_hint_x: .7
            Label:
                halign: 'left'
                text: root.titulo
                font_size: dp(20)
                color: utils.get_color_from_hex(font_color)
                text_size: self.size
            Label:
                halign: 'left'
                text: root.verso
                font_size: dp(15)
                color: utils.get_color_from_hex(font_color)
                text_size: self.size
        Label:
            halign: 'left'
            valign: 'center'
            size_hint_x: .3
            text: root.modificado
            font_size: dp(15)
            color: utils.get_color_from_hex(font_color)
            text_size: self.size

<Verso>:
    txt_texto: txt_texto 
    size_hint_y: None
    height: dp(30)
    BoxLayout:
        orientation: 'horizontal'
        Label:
            halign: 'left'
            size_hint_x: .05
            text: str(root.num)
            font_size: dp(10)
            color: utils.get_color_from_hex(font_color)
            text_size: self.size
        TextInput:
            id: txt_texto
            halign: 'left'
            size_hint_x: .70
            text: root.texto
            font_size: dp(15)
            color: utils.get_color_from_hex(font_color)
            multiline: False
            on_text: root.txt_texto_on_text()
        Label:
            halign: 'center'
            size_hint_x: .05
            text: root.metrica
            font_size: dp(15)
            color: utils.get_color_from_hex(font_color)
            text_size: self.size
        Label:
            halign: 'center'
            size_hint_x: .05
            text: root.rima
            font_size: dp(15)
            color: utils.get_color_from_hex(font_color)
            text_size: self.size
        Label:
            halign: 'center'
            size_hint_x: .05
            text: root.metrica_composicion
            font_size: dp(15)
            color: utils.get_color_from_hex(font_color)
            text_size: self.size
        Label:
            halign: 'center'
            size_hint_x: .05
            text: root.rima_composicion
            font_size: dp(15)
            color: utils.get_color_from_hex(font_color)
            text_size: self.size
        Label:
            halign: 'center'
            size_hint_x: .05
            text: root.valido
            font_size: dp(10)
            color: utils.get_color_from_hex(font_color)
            text_size: self.size

<PantallaConfirmacion>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex(background_color)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Seguro?"
            halign: 'center'            
            size_hint: 1, .5
            pos_hint: {"x":0,"top":0.75}
            font_size: dp(20)
            color: utils.get_color_from_hex(font_color)
        Button:
            text: "Si"
            size_hint: .5, .2
            pos_hint: {"x":.0,"top":.2}
            font_size: dp(20)
            color: utils.get_color_from_hex(font_color)
            on_press: root.btn_si_on_press()
        Button:
            text: "No"
            size_hint: .5, .2
            pos_hint: {"x":.5,"top":.2}
            font_size: dp(20)
            color: utils.get_color_from_hex(font_color)
            on_press: root.btn_no_on_press()